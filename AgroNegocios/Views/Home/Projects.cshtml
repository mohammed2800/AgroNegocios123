@model List<AgroNegocios.DAL.Projects>

@using AgroNegocios.Resources

@{
    ViewBag.Title = HomeRes.OurProjects;
}

<style>
    @@media screen and (min-width: 501px) {
        #mapDesk {
            display: block;
        }

        #mapMob {
            display: none;
        }
    }

    @@media screen and (max-width: 500px) {
        #mapDesk {
            display: none;
        }

        #mapMob {
            display: block;
        }
    }
</style>

<div class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url('../../img/bg-img/18.jpg');">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-text">
                    <h2>@HomeRes.OurProjects</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="famie-breadcrumb">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> @HomeRes.Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">@HomeRes.OurProjects</li>
            </ol>
        </nav>
    </div>
</div>

<section class="our-products-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Heading -->
                <div class="section-heading text-center">

                    <h2><span>@HomeRes.OurProjects</span></h2>
                    <img src="~/img/core-img/decor2.png" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-us-area">
    <div class="container">
        <div class="row align-items-center">
            @if (Model != null && Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var title = HomeRes.Home.ToLower().Equals("home") ? Model.ElementAt(i).Title
                        : string.IsNullOrEmpty(Model.ElementAt(i).TitleInSpanish) ? Model.ElementAt(i).Title : Model.ElementAt(i).TitleInSpanish;
                    var description = HomeRes.Home.ToLower().Equals("home") ? Model.ElementAt(i).Description
                        : string.IsNullOrEmpty(Model.ElementAt(i).DescriptionInSpanish) ? Model.ElementAt(i).Description : Model.ElementAt(i).DescriptionInSpanish;

                    <div class="col-12 col-lg-6">
                        <div class="about-us-content mb-100">
                            <div class="section-heading">
                                <h2>@title</h2>
                                <img src="~/img/core-img/decor.png" alt="">
                            </div>
                            <p>
                                @description
                            </p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="about-us-thumbnail mb-100">
                            <img src="~/img/@Model.ElementAt(i).Picture" alt="">
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<section class="contact-area pt-30">

    <div class="row">
        <div class="col-12">
            <div class="section-heading text-center">
                <h2><span>Our Projects</span> Map</h2>
                <img src="~/img/core-img/decor2.png" alt="">
            </div>
        </div>
    </div>

    <div style="width:100%">
        <img style="width:100%" id="mapDesk" src="~/img/Map_desk.png" />
        <img style="width:100%" id="mapMob" src="~/img/Map_mobile.png" />
    </div>

    @*<div style="width:100%;height:600px">
            <div id="GoogleMap"></div>
        </div>*@
</section>
