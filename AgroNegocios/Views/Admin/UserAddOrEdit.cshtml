@model AgroNegocios.DAL.Users

@{
    ViewBag.Title = "UserAddOrEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="single-product-tab-area mg-tb-15" style="margin-right: 200px;">
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        @if (Model != null && Model.ID != 0)
                        {
                            <ul id="myTab3" class="tab-review-design">
                                <li class="active"><a href="#"><i class="fa fa-pencil" aria-hidden="true"></i>עדכון משתמש</a></li>
                            </ul>
                            <div id="myTabContent" class="tab-content custom-product-edit">
                                <div class="product-tab-list tab-pane fade active in" id="description">
                                    @using (Html.BeginForm("UserEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="row" style="direction: rtl;">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> שם מלא </span>
                                                        <input type="text" name="FullName" value="@Model.FullName" class="form-control" placeholder="שם מלא" style="max-height:30px;max-width:400px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> שם משתמש </span>
                                                        <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="שם משתמש" style="max-height:30px;max-width:377px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> סיסמה </span>
                                                        <input type="text" name="Password" value="@Model.Password" class="form-control" placeholder="סיסמה" style="max-height:30px;max-width:407px">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model => Model.ID)
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        עדכן
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            using (Html.BeginForm("UserAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <ul id="myTab3" class="tab-review-design">
                                    <li class="active"><a href="#description"><i class="fa fa-pencil" aria-hidden="true"></i>הוספת משתמש</a></li>
                                </ul>
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row" style="direction: rtl;">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> שם מלא </span>
                                                        <input type="text" name="FullName" class="form-control" placeholder="שם מלא" style="max-height:30px;max-width:400px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> שם משתמש </span>
                                                        <input type="text" name="UserName" class="form-control" placeholder="שם משתמש" style="max-height:30px;max-width:377px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> סיסמה </span>
                                                        <input type="text" name="Password" class="form-control" placeholder="סיסמה" style="max-height:30px;max-width:407px">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        הוסף
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

