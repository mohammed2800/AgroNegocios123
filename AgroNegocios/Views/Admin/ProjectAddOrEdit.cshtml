@model AgroNegocios.DAL.Projects
<link href="~/Content/admin/component.css" rel="stylesheet" />

@{
    ViewBag.Title = "ProjectAddOrEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="single-product-tab-area mg-tb-15" style="margin-right: 200px;">
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        @if (Model != null && Model.ID != 0)
                        {
                            <ul id="myTab3" class="tab-review-design">
                                <li class="active"><a href="#"><i class="fa fa-pencil" aria-hidden="true"></i> עדכון פרויקט </a></li>
                            </ul>
                            <div id="myTabContent" class="tab-content custom-product-edit">
                                <div class="product-tab-list tab-pane fade active in" id="description">
                                    @using (Html.BeginForm("ProjectEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="row" style="direction: rtl;">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> כותרת פרויקט (אנגלית) </span>
                                                        <input type="text" name="Title" value="@Model.Title" class="form-control" placeholder="כותרת פרויקט (אנגלית)" style="max-height:30px;max-width:743px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> כותרת פרויקט (ספרדית)</span>
                                                        <input type="text" name="TitleInSpanish" value="@Model.TitleInSpanish" class="form-control" placeholder="כותרת פרויקט (ספרדית)" style="max-height:30px;max-width:743px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-ticket" aria-hidden="true"></i> פרטי פרויקט (אנגלית) </span>
                                                        <textarea type="text" name="Description" class="form-control" placeholder="פרטי פרויקט (אנגלית)" style="min-height:130px;max-height:130px;min-width:750px;max-width:750px">@Model.Description</textarea>
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-ticket" aria-hidden="true"></i> פרטי פרויקט (ספרדית) </span>
                                                        <textarea type="text" name="DescriptionInSpanish" class="form-control" placeholder="פרטי פרויקט (ספרדית)" style="min-height:130px;max-height:130px;min-width:750px;max-width:750px">@Model.DescriptionInSpanish</textarea>
                                                    </div>
                                                    <span style="margin-right: 1%;margin-left: 0.5%;">תמונה ראשית:</span>
                                                    @if (Model.Picture != "")
    {
                                                <img src="~/img/@Model.Picture" alt="" style="width:100%" />
                                                @Html.HiddenFor(model => Model.Picture)
                                                <button type="button" class="btn btn-danger waves-effect waves-light" onclick="location.href='@Url.Action("ProjectPictureDelete", "Admin", new { ID = Model.ID })'">
                                                    מחק
                                                    <i class="fa fa-times" aria-hidden="true"></i>
                                                </button>
}
else
{
                                                @Html.HiddenFor(model => Model.Picture)
}
                                                    <div style="display: inline-flex;">
                                                        <input type="file" name="file" id="file" class="inputfile inputfile-4" data-multiple-caption="{count} קבצים נבחרו" />
                                                        <label for="file"><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" /></svg></figure> <span>בחר קובץ&hellip;</span></label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model => Model.ID)
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        עדכן
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            using (Html.BeginForm("ProjectAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <ul id="myTab3" class="tab-review-design">
                                    <li class="active"><a href="#description"><i class="fa fa-pencil" aria-hidden="true"></i>הוספת פרויקט</a></li>
                                </ul>
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row" style="direction: rtl;">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> כותרת פרויקט (אנגלית)</span>
                                                        <input type="text" name="Title" class="form-control" placeholder="כותרת פרויקט (אנגלית)" style="max-height:30px;max-width:743px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i> כותרת פרויקט (ספרדית) </span>
                                                        <input type="text" name="TitleInSpanish" class="form-control" placeholder="כותרת פרויקט (ספרדית)" style="max-height:30px;max-width:743px">
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-ticket" aria-hidden="true"></i> פרטי פרויקט (אנגלית)</span>
                                                        <textarea type="text" name="Description" class="form-control" placeholder="פרטי פרויקט (אנגלית)" style="min-height:130px;max-height:130px;min-width:750px;max-width:750px"></textarea>
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-ticket" aria-hidden="true"></i> פרטי פרויקט (ספרדית)</span>
                                                        <textarea type="text" name="DescriptionInSpanish" class="form-control" placeholder="פרטי פרויקט (ספרדית)" style="min-height:130px;max-height:130px;min-width:750px;max-width:750px"></textarea>
                                                    </div>
                                                    
                                                    <span style="margin-right: 1%;">תמונה ראשית:</span>
                                                    <div style="display: inline-flex;">
                                                        <input type="file" name="file" id="file" class="inputfile inputfile-4" data-multiple-caption="{count} קבצים נבחרו" />
                                                        <label for="file"><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" /></svg></figure> <span>בחר קובץ&hellip;</span></label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        הוסף
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/admin/custom-file-input.js"></script>
